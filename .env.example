# Required: SQLite Cloud or local database connection
DATABASE_URL=sqlitecloud://your-host.sqlite.cloud:8860/your-database.sqlite?apikey=your-api-key

# Optional: Email service for reports and notifications
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@yourdomain.com

# Optional: Server configuration
PORT=3000
NODE_ENV=development

# Optional: Database connection pool settings
DB_MAX_CONNECTIONS=10
DB_IDLE_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3
DB_RETRY_DELAY=1000

# Optional: Logging configuration
LOG_LEVEL=debug

# Optional: Custom machine identifier
MACHINE_ID=my-server

# Auth0 Configuration for Web Dashboard
AUTH0_DOMAIN=your-auth0-domain.auth0.com
APP_BASE_URL=http://localhost:3001
AUTH0_SECRET=your-long-random-secret-here
AUTH0_CLIENT_ID=your-auth0-web-client-id
AUTH0_CLIENT_SECRET=your-auth0-web-client-secret
AUTH0_ISSUER_BASE_URL=https://your-auth0-domain.auth0.com
