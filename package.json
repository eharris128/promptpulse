{
  "name": "promptpulse",
  "version": "1.0.0",
  "description": "Track and analyze your Claude Code usage across multiple machines",
  "type": "module",
  "main": "lib/index.js",
  "bin": {
    "promptpulse": "./bin/promptpulse.js",
    "ppulse": "./bin/promptpulse.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "node --watch server.js",
    "client:dev": "cd client && npm run dev",
    "migrate": "node migrate.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "prepublishOnly": "npm run test",
    "postinstall": "node -e \"console.log('\\nâœ¨ PromptPulse installed successfully!\\n\\nGet started:\\n  promptpulse user init\\n  promptpulse collect\\n')\""
  },
  "keywords": [
    "claude",
    "claude-code",
    "usage-tracking",
    "analytics",
    "cli",
    "productivity",
    "ai",
    "monitoring"
  ],
  "author": "eharris128",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eharris128/promptpulse.git"
  },
  "bugs": {
    "url": "https://github.com/eharris128/promptpulse/issues"
  },
  "homepage": "https://github.com/eharris128/promptpulse#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "ccusage": "^15.0.0",
    "commander": "^12.0.0"
  },
  "devDependencies": {
    "@sqlitecloud/drivers": "^1.0.507",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.5.1"
  }
}
