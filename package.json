{
  "name": "promptpulse",
  "version": "1.0.0",
  "description": "Track and aggregate Claude Code usage across multiple machines",
  "type": "module",
  "main": "server.js",
  "bin": {
    "promptpulse": "./bin/promptpulse.js",
    "ppulse": "./bin/promptpulse.js"
  },
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently --names \"SERVER,CLIENT\" --prefix-colors \"blue,green\" \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "node --watch server.js",
    "client:dev": "cd client && npm run dev",
    "migrate": "node migrate.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "eharris128",
  "license": "MIT",
  "dependencies": {
    "@sqlitecloud/drivers": "^1.0.507",
    "ccusage": "^15.0.0",
    "commander": "^12.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
